#Basic I/O, operations and conditions

#Personal Finance Helper
income = int(input("Enter your income: "))
expenses = int(input("Enter your expenses: "))
savings_goals = int(input("Enter your savings goal that you would like to achieve: "))
months = int(input("Enter the time period you would like to achieve this in (in months): "))

remaining_balance = income - expenses

if income < expenses:
    print("Your income cannot be less than expenses. If so you cannnot save any money.")
else:
    total_savings = remaining_balance * months

    goal_Reach = savings_goals / remaining_balance
    print(f"YOur remaining balance is {remaining_balance} rupess")
    print(f"Your total savings are {total_savings} rupess")
    print(f"Time take to reach your goal is {round(goal_Reach,2)} months")

#Travel time and cost estimator
distance = float(input("Enter the distance in kilometers: "))
mileage = float(input("Enter the mileage of the vehicle: "))
fuel_price = float(input("Enter the fuel price per liter: "))
speed = float(input("Enter the speed of the vehicle in kilometers: "))

fuel_needed = distance / mileage
cost = fuel_needed * fuel_price
time_period = distance / speed

print(f"Fuel required is {fuel_needed:.2f} liters")
print(f"Total cost needed for the trip is {cost:.2f} rupees")
print(f"Total time needed to reach your destination is {time_period:.2f} hours")

#Fitness Progress calculator
steps_walked = int(input("Enter the total steps walked (in meters): "))
calories_per_km = int(input("Enter the calories burned per kilometer: "))
weight = float(input("Enter your weight in kgs: "))
speed = int(input("Enter the speed you were walking at: "))

distance = steps_walked / 1000
calories_burned = distance * calories_per_km
time_spent = distance / speed

print(f"Total distance walked is {distance:.1f} kilometers")
print(f"Total calories burned are {calories_burned:.1f} kcal")
print(f"Total time spent exercising is {time_spent:.2f} hours")

#Electricity bill manager

units_consumed = float(input("Enter the total units that were consumed for 3 months: "))

average = units_consumed / 3
print(f"Units used for one month are {average:.1f} units")
time.sleep(2)

if average <= 100:
    print("The cost per unit is $5")
    bill = average * 5
elif average >= 101 and average < 200:
    print("The cost per unit is $7")
    bill = average * 7
else:
    print("The cost per unit is $10")
    bill = average * 10

time.sleep(2)
bill_for_3months = bill * 3
print(f"The bill for three months with the given units is {bill_for_3months:.0f} dollars")

#Student marks analyser
subject_1 = int(input("Enter the marks of subject 1: "))
subject_2 = int(input("Enter the marks of subject 2: "))
subject_3 = int(input("Enter the marks of subject 3: "))
subject_4 = int(input("Enter the marks of subject 4: "))
subject_5 = int(input("Enter the marks of subject 5: "))
total_marks = subject_1 + subject_2 + subject_3 + subject_4 + subject_5
average = total_marks / 5
if average >= 90:
    print("A grade")
elif average >= 80:
    print("B grade")
elif average >=70:
    print("C grade")
elif average >=60:
    print("D grade")
elif average >=50:
    print("E grade")
else:
    print("F grade")


# Temperature Converter

temperature_celsius = float(input("Enter the temperature in Celsius: "))

fahrenheit = (temperature_celsius * 9/5) + 32

kelvin = temperature_celsius + 273.15

print(f"Temperature in Celsius: {temperature_celsius:.2f}°C")
print(f"Temperature in Fahrenheit: {fahrenheit:.2f}°F")
print(f"Temperature in Kelvin: {kelvin:.2f}K")

#Time conversion

total_minutes = int(input("Enter the total time in minutes: "))
hours = total_minutes // 60
minutes = total_minutes % 60

print(f"Total time is {hours} hrs and {minutes} mins")

total_seconds = int(input("Enter hte total time in seconds: "))
hours = total_seconds // 3600
remaining_seconds = total_seconds % 3600
minutes = remaining_seconds //60
seconds = remaining_seconds % 60
print(f"Total time is {hours} hrs {minutes} mins and {seconds} secs")

#Area and volume calculator 
import math

while True:
    shape = input("Enter the shape you would like calculate the area, perimeter or volume of (rectangle, square, triangle, circle, cylinder, sphere): ").lower().strip()
    
    if shape == "rectangle":
        length = int(input("Enter the length of the rectangle: "))
        width = int(input("Enter the width of the rectangle: "))
        area = length * width
        perimeter = 2 * (length + width)
        print(f"Area of the rectangle is {area}")
        print(f"Perimeter of the rectange is {perimeter}")
        break

    elif shape == "square":
        side = int(input("Enter the side of the square: " ))
        perimeter = 4 * side
        area = side ** 2
        print(f"Area of square is {area}")
        print(f"Perimeter of the square is {perimeter}")
        break

    elif shape == "triangle":
        breadth = int(input("Enter the breadth of the triangle: "))
        height = int(input("Enter the height of the triangle: "))
        a = int(input("Enter the a side of triangle: "))
        b = int(input("Enter the b side of triangle: "))
        c = int(input("Enter the c side of triangle: "))
        area = 1/2 * breadth * height
        perimeter = a + b + c
        print(f"Area of the triangle is {area}")
        print(f"Perimeter of the triangle is {perimeter}")
        break

    elif shape == "cylinder":
        radius = int(input("Enter the radius of the cylinder: "))
        height = int(input("Enter the height of the cylinder: "))
        volume = math.pi * radius**2 * height
        area = 2 * math.pi * radius * height + 2 * math.pi * radius ** 2
        print(f"Area of the cylinder is {area}")
        print(f"Volume of the cylinder is {volume}")
        break

    elif shape == "circle":
        radius = int(input("Enter the radius of the circle:"))
        area = math.pi * radius**2
        circumference = 2 * math.pi * radius
        print(f"Area of the circle is {area}")
        print(f"Circumference of the circle is {circumference}")
        break

    elif shape == "sphere":
        radius = int(input("Enter the radius of the sphere: "))
        volume = 4/3 * math.pi * radius**3
        area = 4 * math.pi * radius** 2
        print(f"Volume of the sphere is {volume}")
        print(f"Area of the sphere is {area}")
        break

    else:
        print("Invalid shape given. Please enter the shape from the given list.")
        continue

#Health Stat checker
weight = float(input("Enter your weight in kgs: "))
height = float(input("Enter your height in meters: "))

bmi = weight / (height ** 2)
print(f"Your BMI is {bmi:.2f}")

if bmi < 18.5:
    print("Underweight")
elif bmi < 25:
    print("Normal weight")
elif bmi < 30:
    print("Overweight")
else:
    print("Obese")

#Basic Looping systems

#Basic ATM 

import time

while True:
    pin = input("Enter your four digit pin: ").strip()
    if pin == "":
        continue
    elif pin == "8104":
        time.sleep(2)
        print("Access Granted.\n")
        break
    else:
        print("Incorrect pin. Please try again.")

time.sleep(2)
print("What would you like to choose: \n" 
"1. Deposit \n"
"2. Withdraw \n" 
"3. Balance \n" 
"4. Exit")

balance = 2000

while True:

    option = input("Enter your choice: ")

    if option == "1":
        amount = int(input("Enter the amount you would like to deposit: "))
        balance += amount 
        print(f"Your balance is : {balance}")

    elif option == "2":
        amount = int(input("Enter the amount you would like to withdraw: "))
        if balance < amount:
            print("Insufficient funds to withdraw. Please add more funds.")
        else:
            balance -= amount
            print(f"Your balance is: {balance}")

    elif option == "3":
        print(f"Your current balance is {balance}.")

    elif option == "4":
        print("Thank you for using our bank.")
        break
    
    else:
        print("Invalid option chosen. Please try choosing again.")

#Number guessing game

import random 

random_integer = random.randint(1,100)
while True:
    guess = int(input("Enter your guess for the number: "))
    if guess > random_integer:
        print("Number too high.")
        continue
    elif guess < random_integer:
        print("Number too low.")
        continue
    elif guess == random_integer:
        print("Correct number.")
        break

#Multiplication table:

while True:
    choice = input("Do you want to print multiple tables? (yes/no): ").strip().lower()

    if choice == "yes":
        start = int(input("Enter the starting table: "))
        end = int(input("Enter the ending table: "))

        for table in range(start, end + 1):
            print(f"Multiplication Table for {table}:")
            for j in range(1, 11):
                print(f"{table} x {j} = {table * j}")

    elif choice == "no":
        table = int(input("Enter the table you would like: "))
        print(f"Multiplication Table for {table}:")
        for j in range(1, 11):
            n = table * j
            print(n)

    else:
        print("Invalid choice. Please enter 'yes' or 'no'.")
        continue

    again = input("\nDo you want to try again? (yes/no): ").strip().lower()
    if again != "yes":
        print("Goodbye!")
        break

# Student Attendance System

total_students = int(input("Enter number of students: "))

present_count = 0
absent_count = 0

for i in range(1, total_students + 1):
    name = input(f"Enter student {i} name: ")
    status = input(f"Is {name} present (yes/no)? ").lower().strip()

    if status == "yes":
        present_count += 1
    elif status == "no":
        absent_count += 1
    else:
        print("Invalid input, marking as absent by default.")
        absent_count += 1

print("\nAttendance Report:")
print(f"Total Students: {total_students}")
print(f"Present: {present_count}")
print(f"Absent: {absent_count}")

#FizzBuzz Calc

import time

n = int(input("How many numbers to check: "))

fizz_counter = 0
buzz_counter = 0
fizzbuzz_counter = 0

for i in range(1, n+1):
    if i % 3 == 0 and i % 5 == 0:
        fizzbuzz_counter += 1
        print("FizzBuzz", end=" | ")
    elif i % 3 == 0:
        fizz_counter += 1
        print("Fizz", end=" | ")
    elif i % 5 == 0:
        buzz_counter += 1
        print("Buzz", end=" | ")
    else:
        print(i, end=" | ")


time.sleep(2)
print("\nCount Report:")
print(f"Fizz Counter: {fizz_counter}")
print(f"Buzz Counter: {buzz_counter}")
print(f"FizzBuzz Counter: {fizzbuzz_counter}")

#Menu based calculator

import time

while True:
    option = int(input("List of options you have:\n"
                       "1. Add\n"
                       "2. Subtract\n"
                       "3. Multiply\n"
                       "4. Divide\n"
                       "5. Exit\n"
                       "Enter your choice: "))

    if option == 1:
        a = int(input("Enter the first value: "))
        b = int(input("Enter the second value: "))
        print(f"Result: {a + b}")

    elif option == 2:
        a = int(input("Enter the first value: "))
        b = int(input("Enter the second value: "))
        print(f"Result: {a - b}")

    elif option == 3:
        a = int(input("Enter the first value: "))
        b = int(input("Enter the second value: "))
        print(f"Result: {a * b}")

    elif option == 4:
        a = int(input("Enter the first value: "))
        b = int(input("Enter the second value: "))
        try:
            print(f"Result: {a / b}")
        except ZeroDivisionError:
            print("Cannot divide by zero!")

    elif option == 5:
        print("Goodbye.")
        break

    else:
        print("Invalid option. Please choose again.")

    time.sleep(1)

#More loops and conditions

#Library late fee calculator
n = int(input("Enter how many books did you borrow? "))

total_fine = 0

for i in range(1,n+1):
    time = int(input(f"For how many days was this book {i} late by? "))
    
    if time <= 5:
        fine = time * 2
        print(f"Book {i}: Fine is $2 per day -> ${fine}")
        
    elif time >= 6 and time <= 10:
        fine = time * 5
        print(f"Book {i}: Fine is $5 per day -> ${fine}")
        
    elif time > 10:
        fine = time * 10
        print(f"Book {i}: Fine is $10 per day -> ${fine}")
        
    else:
        fine = 0
        print("No fine.")

    total_fine += fine

print(f"\nTotal fine is {total_fine} dollars.")

if total_fine > 500:
    print("Your account has been blocked until you pay the fine.")
else:
    print("You can still borrow books.")

#Bus ticketing system

import time

total_bus_seats = int(input("Enter the total bus seats available: "))
available_seats = total_bus_seats

while True:
    print("\n--- Bus Ticketing System ---")
    print("1. Book a ticket")
    print("2. Cancel a ticket")
    print("3. Check availability")
    print("4. Exit")

    choice = input("Enter your choice: ").strip()

    if choice == "1":
        name = input("Enter passenger name: ")
        number_of_seats = int(input("Enter the number of seats you would like to book: "))
        if available_seats < number_of_seats:
            print("Not enough seats available.")
        else:
            available_seats -= number_of_seats
            print(f"Booking confirmed for {name}. Seats booked: {number_of_seats}")

    elif choice == "2":
        seats_to_cancel = int(input("Enter the number of seats you would like to cancel: "))
        if available_seats + seats_to_cancel <= total_bus_seats:
            available_seats += seats_to_cancel
            print(f"Seat cancellation confirmed. Seats cancelled: {seats_to_cancel}")
        else:
            print("Invalid cancel request (exceeds total seats).")

    elif choice == "3":
        print(f"Total available seats: {available_seats}/{total_bus_seats}")

    elif choice == "4":
        print("Thank you for using our bus service.")
        break

    else:
        print("Invalid choice. Please try again.")

    time.sleep(2)

#Ticket Booking System
import time

total_seats = int(input("Enter total available seats: "))
available_seats = total_seats
revenue = 0
ticket_price = {"normal": 150, "vip": 300}

while True:
    print("\n--- Cinema Booking System ---")
    print("1. Book a ticket")
    print("2. Cancel a ticket")
    print("3. Check seats")
    print("4. Check revenue")
    print("5. Exit")

    choice = input("Enter your choice: ").strip()

    if choice == "1":
        seat_type = input("Seat type (normal/vip): ").strip().lower()

        if seat_type not in ticket_price:
            print("Invalid seat type. Choose 'normal' or 'vip'")
            continue

        seats_to_book = int(input("How many tickets would you like to book? "))
        if seats_to_book > available_seats:
            print("Not enough seats available.")
        else:
            available_seats -= seats_to_book
            cost = seats_to_book * ticket_price[seat_type]
            revenue += cost

            print(f"Booking confirmed! {seats_to_book} {seat_type} seats booked.")
            print(f"Total cost: ${cost}")

    elif choice == "2":
        seat_type = input("Which seat type do you want to cancel (normal/vip): ").strip().lower()

        if seat_type not in ticket_price:
            print("Invalid seat type.")
            continue

        seats_to_cancel = int(input("How many seats to cancel? "))

        if seats_to_cancel > (total_seats - available_seats):
            print("You cannot cancel more than the seats already booked.")
        else:
            available_seats += seats_to_cancel
            refund = seats_to_cancel * ticket_price[seat_type]
            revenue -= refund
            print(f"{seats_to_cancel} {seat_type} seats cancelled. Refund: ${refund}")

    elif choice == "3":
        print(f"Available seats: {available_seats}/{total_seats}")

    elif choice == "4":
        print(f"Total revenue: ${revenue}")

    elif choice == "5":
        print("Thank you for using the cinema booking system!")
        break

    else:
        print("Invalid choice. Try again.")

    time.sleep(1)

